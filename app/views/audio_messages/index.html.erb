<div>
<h1>Radio Centre Aéré</h1>
<p>Les dicours des membres de la résistance</p>
</div>
<% if @audio_messages.nil? %>
<div>
  <h2>pas de messages publiés!</h2>
</div>
<% else %>
<div>
  <% @audio_messages.each do |audio_message| %>
  <div>
    <h2>
    <%= audio_message.user.email %>
    </h2>
    <p> <%= audio_message.description %></p>
    <div>
      <% if audio_message.audio_file.attached? == false %>
      <p>Pas d'audio</p>
      <% else %>
      <%= audio_tag rails_blob_path(audio_message.audio_file), controls: true %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<% end %>
